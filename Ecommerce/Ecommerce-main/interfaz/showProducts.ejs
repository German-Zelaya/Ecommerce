<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Productos</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      .container-border {
        margin-top: 5%;
        background: linear-gradient(to top, #e1b700, #000);
        margin: auto;
        width: 80%;
        border-radius: 10px;
        padding: 2px;
      }
      .container {
        color: white;
        max-width: 100%;
        background-color: #131313; /* Fondo del formulario */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      body {
        background-color: #000000;
        padding: 20px;
      }
      .table {
        color: white;
        background: linear-gradient(to top, #333231, #212121);
      }
      th {
        color: #fff9e5;
        text-align: center;
      }
      thead {
        text-align: center;
        border-top: 2px solid #ba9515;
        border-bottom: 2px solid #ba9515;
      }
    </style>
  </head>
  <body>
    <div class="container-border">
      <div class="container">
        <h1 class="text-center">Lista de Productos</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Miniatura</th>
              <th scope="col">CÃ³digo</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Stock</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product) { %>
            <tr>
              <td>
                <img
                  src="/uploads/<%= product.thumbnail %>"
                  class="thumbnail"
                  width="40px"
                />
              </td>
              <td><%= product.code %></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= product.stock %></td>
              <td>
                <a
                  href="api/editProduct/<%= product.id %>"
                  class="btn btn-warning btn-sm"
                  >Editar</a
                >
                <form
                  action="api/deleteProduct/<%= product.id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    Eliminar
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <a
          href="api/createProduct"
          class="btn btn-warning btn-sm"
          style="
            color: white;
            padding: 10px;
            background-color: #ba9515;
            border: none;
          "
          >+ Nuevo Producto</a
        >
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
