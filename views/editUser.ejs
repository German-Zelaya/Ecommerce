<div class="container">
  <form action="/api/editUser/<%= user.id %>" method="POST">
      <div class="container-border">
        <div class="container-form" style="display: block; padding: 30px">
          <h1 class="text-center">Editar Usuario</h1>
          <hr />
          <div class="row">
            <div class="col-3">
              <div class="form-group">
                <label for="username">Usuario:</label>
                <input
                  class="form-control"
                  type="text"
                  id="username"
                  name="username"
                  required
                  value="<%= user.username %>"
                />
              </div>
            </div>
              <div class="col-3">
                  <div class="form-group">
                  <label for="email">email:</label>
                  <input
                      class="form-control"
                      type="email"
                      id="email"
                      name="email"
                      required
                      value="<%= user.email %>"
                  />
                  </div>
              </div>
            <div class="col-3">
              <div class="form-group">
                <label for="password">Contraseña:</label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                  value="<%= user.password %>"
                />
              </div>
            </div>
            <div class="col-3">
              <div class="form-group">
                <label for="rol">Rol:</label>
                <select class="form-control" id="rol" name="rol" required>
                  <option value="0" <%= user.rol == 0 ? "selected" : "" %>>Usuario</option>
                  <option value="1" <%= user.rol == 1 ? "selected" : "" %>>Administrador</option>
                </select>
              </div>
            </div>
          </div>
          <br />
          <div class="row">
            <div class="col-6">
              <button class="btn btn-primary btn-block" type="submit">Guardar Cambios</button>
            </div>
            <div class="col-6">
              <a href="/users" class="btn btn-danger btn-sm" style="width: 100%"
                >Cancelar</a
              >
            </div>
          </div>
        </div>
      </div>
    </form>
    
</div>