<div class="container">
  <div class="searchcontainer">
    <% products.forEach((product) => { %>
    <div class="card w-100">
      <a href="/product/<%= product.id %>">
        <div class="row g-0 align-items-center">
          <div class="col-md-1">
            <img
              src="/uploads/<%= product.thumbnail %>"
              class="img-fluid"
              style="height: 150px"
              alt="..."
            />
          </div>
          <div
            class="col-md-11 align-items-center"
            style="background-color: transparent; border-radius: 0%"
          >
            <div class="card-body d-flex justify-content-between">
              <div class="d-flex flex-column col-8">
                <h5 class="display-1"><%= product.name %></h5>
                <p class="display-2"><%= product.description %></p>
              </div>
              <p class="card-text"><%= product.updateAt %></p>
              <p class="btn btn-secondary">$<%= product.price %></p>
            </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</div>
